<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To DO List</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <section class='Adds'>
      <h1>This is my To Do List</h1>
      <form class="form1" action="/" method="post">
        <input type="text" name="todo" value="">
        <button type="submit" action='/' name="addToDo">Add this ToDo</button>
      </form>
    </section>
    <section class='list'>
        {{#todosList}}
        <form class="form2" action="/markCom" method="post">
          <ul>
            <li>
              <button type="submit"  value="{{.}}" name="done">Mark Complete</button>
              <label for="completed" name="done">
              <span>{{.}}</span>
              </label>
            </li>
          </ul>
        </form>
        {{/todosList}}
    </section>
    <section class='completed'>
        <h2>Completed To Do's</h2>
        {{#compList}}
          <p>{{.}}</p>
        {{/compList}}
        <!-- css line through -->
    </section>
  </body>
</html>
